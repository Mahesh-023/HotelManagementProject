@model HotelManagementProject.Models.Room

@{
    ViewBag.Title = "DeleteRoom";
}


<h3>Are you sure you want to delete this?</h3>
<div class="main-container">
    <h4>Room</h4>
    <hr />
    <div class="container-fluid">

        <dl class="row">
            <div class="col-sm-6" style=" padding-left: 50px; padding-top: 40px ">
                <div class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.RoomName)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.RoomName)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.RoomType)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.RoomType)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>

                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color" style="
    margin-top: 40px;
">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            <button class="btn btn-info">@Html.ActionLink("Back to List", "ManageRoom")</button>
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-6">
                <dd>
                    <img src="@Url.Content(Model.RoomImage)" height="300" width="350" style="
    border-radius: 20px;
" />
                </dd>
            </div>
        </dl>


    </div>
</div>

<style>
    .container, .container-fluid, .container-xxl, .container-xl, .container-lg, .container-md, .container-sm {
        --bs-gutter-x: 1.5rem;
        --bs-gutter-y: 0;
        width: 100%;
    }

    .container-sm, .container {
        max-width: 100%;
    }

    footer {
        margin-top: 60px;
    }

    .col-sm-9 {
        padding-left: 40px;
    }

    h3, h4 {
        text-align: center;
    }
</style>