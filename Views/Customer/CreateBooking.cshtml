@model HotelManagementProject.Models.Booking

@{
    ViewBag.Title = "CreateBooking";
}





<section class="bg-opacity-75">
   <div class="book">
    
       <div class="form">


           @using (Html.BeginForm())
           {
               @Html.AntiForgeryToken()
               
               <div class="form-horizontal content">


                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                   <div class="form-group hid">
                       @Html.LabelFor(model => model.CustomerId, "CustomerId", htmlAttributes: new { @class = "control-label col-md-2  " })
                       <div class="col-md-10">
                           @Html.TextBoxFor(model => model.CustomerId, new { @class = "form-control", @Value = ViewBag.CustomerId })
                           @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                       </div>
                   </div>

                   <div class="form-group hid">
                       @Html.LabelFor(model => model.RoomId, "RoomId", htmlAttributes: new { @class = "control-label col-md-2 " })
                       <div class="col-md-10">
                           @Html.TextBoxFor(model => model.RoomId, new { @class = "form-control", @Value = ViewBag.RoomId })
                           @Html.ValidationMessageFor(model => model.RoomId, "", new { @class = "text-danger" })
                       </div>
                   </div>
                   <div class="ab">
                       <div class="form-group vw">
                           <h5>Cheak In Date</h5>
                           <div class="col-md-3">
                               @Html.EditorFor(model => model.CheckInDate, new { htmlAttributes = new { @class = "form-control", type = "date", @placeholder = "Cheak In date" } })
                               @Html.ValidationMessageFor(model => model.CheckInDate, "", new { @class = "text-danger" })
                           </div>
                       </div>

                       <div class="form-group vw">
                           <h5>Cheak Out Date</h5>
                           <div class="col-md-3">
                               @Html.EditorFor(model => model.CheckOutDate, new { htmlAttributes = new { @class = "form-control", type = "date", @placeholder = "Cheak 0ut date" } })
                               @Html.ValidationMessageFor(model => model.CheckOutDate, "", new { @class = "text-danger" })
                           </div>
                       </div>

                       <div class="form-group vw">
                           <h5>Number Of Adults</h5>
                           <div class="col-md-3">
                               @Html.TextBoxFor(model => model.NoOfMember, new { @class = "form-control", @placeholder = "Adults" })
                               @Html.ValidationMessageFor(model => model.NoOfMember, "", new { @class = "text-danger" })
                           </div>
                       </div>

                       <br /><br />

                       <div class="form-group s">
                           <div class="col-md-offset-2 col-md-4">
                               <input type="submit" value="Book And Pay" class="btn btn-default" />
                           </div>
                       </div>
                   </div>
               </div>
           }


       </div>
    </div>
    </div>
</section>




