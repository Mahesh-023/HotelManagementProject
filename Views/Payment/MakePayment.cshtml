@model HotelManagementProject.Models.Payment

@{
    ViewBag.Title = "MakePayment";
}

<body style="
      margin-top: 0px;
      margin-left: 0px;
      margin-right: 0px;
      ">
    
    <img src="~/Images/index_1 (3).jpg" />

    <div class="vid-container">

        <div class="inner-container">

            <div class="box">
                <h1>Make-Payment</h1>
                @using (Html.BeginForm("MakePayment", "Payment", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal" style="
                      text-align: -webkit-center;">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group" style="display:none">
                           
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.BookingId, new { @class = "form-control", @Value = ViewBag.bookingId })
                                @Html.ValidationMessageFor(model => model.BookingId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.AmountPaid, new { @class = "form-control input", @Value = ViewBag.Amt })
                                @Html.ValidationMessageFor(model => model.AmountPaid, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                           
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.PaymentDate, new { @class = "form-control input", type = "date", @Value = ViewBag.date })
                                @Html.ValidationMessageFor(model => model.PaymentDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Select Payment Method: </label>
                            <div class="col-md-10">
                                @Html.DropDownList("PaymentMode", new List<SelectListItem>
                                           {
                               new SelectListItem{Text="Pay on Visit",Value="PayOnVisit"},
                               new SelectListItem{Text="Online Pay",Value="OnlinePay"}

                           }, new { id = "PaymentMethod" })
                            </div>
                        </div>

                        <br />
                       
                        <div id="qrCode">
                            
                            <img  class="imgs" src="~/Images/MicrosoftTeams-image (22).png" />
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default button1" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>



<style>
    .container, .container-fluid, .container-xxl, .container-xl, .container-lg, .container-md, .container-sm {
        --bs-gutter-x: 1.5rem;
        --bs-gutter-y: 0;
