    }

    .container-sm, .container {
        max-width: 100%;
    }

    .body-content {
        margin-top: 0px;
        margin-left: 0px;
        margin-right: 0px;
        padding-right: 0px;
        padding-left: 0px;
    }

    img {
        height: 100vh;
        width: 97vw;
        left: 0;
        top: 0;
        z-index: -1;
        
    }
    .imgs {
        height: 130px;
        width: 130px;
        left: 0;
        top: 0;
        z-index: -1;
    }

    .QR {
        height: 110px;
        width: 110px;
    }

    body {
        padding: 0;
        margin: 0;
    }

    .vid-container {
        display: flex;
        justify-content: center;
        align-items: center;
        position: absolute;
        transform: translate(-55%,-35%);
